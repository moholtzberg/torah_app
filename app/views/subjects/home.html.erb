<div id="home-page" class="row">
  <h1>Featured subjects</h1>
  <div id="featured-subjects" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <% @featured.each do |subject|%>
        <div class="subject item <%= "active" if @featured[0] == subject%>">
          <%= link_to subject do %>
            <%= image_tag(subject.banner_url) if subject.banner? %>
            <div class="subject-name">
              <h2><%= subject.name %></h2>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <a class="left carousel-control" href="#featured-subjects" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#featured-subjects" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<br />

<div class="row">
        <div class="col-md-offset-2 col-md-8">
              <%= form_tag('/subjects', method: :get) do %>
                <div class="input-group col-md-12">
                    <input name="name" class="form-control input-lg" placeholder="Discover subjects" />
                    <span class="input-group-btn">
                        <button class="btn btn-info btn-lg" type="submit">
                            <i class="glyphicon glyphicon-search"></i>
                        </button>
                    </span>
                </div>
              <% end %>
        </div>
	</div>
