<%= form_for(subject) do |f| %>
  <%= errors_for(subject) %>

  <%= f.hidden_field :parent_id %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :featured %>
    <%= f.check_box :featured %>
  </div>

  <div class="form-group">
    <label>thumbnail</label>
    <%= image_tag(@subject.thumbnail_url) if @subject.thumbnail? %>
    <%= f.file_field :thumbnail %>
    <%= f.hidden_field :thumbnail_cache %>
  </div>

  <div class="form-group">
    <label>My banner</label>
    <%= image_tag(@subject.banner_url) if @subject.banner? %>
    <%= f.file_field :banner %>
    <%= f.hidden_field :banner_cache %>
  </div>

  <div class="form-group">
    <label>parent subject</label>
    <input id="subject_picker" autocomplete="off" list="subject_options"
      class="form-control" value="<%= subject.parent.name if subject.parent %>" />
    <datalist id="subject_options">
    </datalist>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
