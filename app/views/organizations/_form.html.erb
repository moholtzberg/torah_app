<%= form_for(organization) do |f| %>
  <%= errors_for(organization) %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>thumbnail</label>
    <%= image_tag(organization.thumbnail_url) if organization.thumbnail? %>
    <%= f.file_field :thumbnail %>
    <%= f.hidden_field :thumbnail_cache %>
  </div>

  <div class="form-group">
    <label>My banner</label>
    <%= image_tag(organization.banner_url) if organization.banner? %>
    <%= f.file_field :banner %>
    <%= f.hidden_field :banner_cache %>
  </div>

  <div class="actions">
    <%= f.submit "Send request", class: "btn btn-success" %>
  </div>
<% end %>
