<div id="organization">
  <div id="banner">
    <%= image_tag(@organization.banner_url, class: "img-rounded img-responsive") if @organization.banner? %>
    <div id="organization-name">
      <h1><%= @organization.name %></h1>
    </div>
  </div>

  <h4>Founded by <%= link_to @organization.founder.name, @organization.founder %> in <%= @organization.created_at.strftime('%d %B %Y') %></h4>
  <h5>
    <%= @organization.name %> has <%= @organization.members.count %> members
    <%= link_to "Go to members list", organization_members_path(@organization) if @organization.memberships.exists?(["user_id = :id AND confirmed_at IS NOT NULL", id: current_user.id])%>
  </h5>

<h3><%= @organization.headline %></h3>

<p><%= @organization.description %></p>
<% if current_user %>
  <% if !current_user.memberships.find_by(organization_id: @organization.id) %>
    <%= link_to 'Become a member', organization_send_invite_path(@organization), method: :post, class: "btn btn-success" %>
  <% elsif  current_user.memberships.find_by(organization_id: @organization.id, confirmed_at:  nil)%>
    <%= link_to 'Cancel invite', organization_cancel_invite_path(@organization), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"}  %>
  <% else %>
    <%= link_to 'Leave', organization_cancel_invite_path(@organization), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?"}  %>
  <% end %>
<% end %>

<%= link_to 'Back', organizations_path, class: "btn btn-primary" %>
