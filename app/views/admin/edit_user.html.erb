<div class="col-lg-12">
<%= link_to @user do %>
  <%= image_tag(@user.avatar_url, size: "100x100", ) %>
  <h2><%= @user.name %></h2>
<% end %>
</div>

<div class="col-lg-12">
<%= form_for(@user, url: admin_update_user_path) do |f| %>
  <%= errors_for(@user) %>

  <div class="form-group">
    <%= f.label :moderator %>
    <%= f.check_box :moderator %>
  </div>

  <div class="form-group">
    <%= f.label :verified %>
    <%= f.check_box :verified%>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
</div>
