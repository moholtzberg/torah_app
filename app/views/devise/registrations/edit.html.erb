<h1>Settings</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>
  <%= errors_for(resource) %>

  <h3>Availability</h3>

  <% 7.times do |n| %>
    <div class="form-group day">
      <%= f.label Date::DAYNAMES[n]  %><br />
      <%= f.hidden_field :availability, value: resource.availability[n], multiple: true, class: "form-control"  %>
      <%= text_field_tag "", resource.availability[n].begin.strftime("%I:%M%p"), class: "time start" %>
      <%= text_field_tag "",resource.availability[n].end.strftime("%I:%M%p"), class: "time end" %>
    </div>
  <% end %>

  <div class="form-group">
    <label>My Avatar</label>
    <%= image_tag(@current_user.avatar_url) if @current_user.avatar? %>
    <%= f.file_field :avatar %>
    <%= f.hidden_field :avatar_cache %>
  </div>

  <% if @current_user.avatar? %>
    <div class="form-group">
      <label>
        <%= f.check_box :remove_avatar %>
        Remove avatar
      </label>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :country %><br />
    <%= f.text_field :country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :state %><br />
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %><br />
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :time_zone %><br />
  <%= f.time_zone_select(:time_zone, nil, default: "(GMT+00:00) UTC") %>
  </div>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
